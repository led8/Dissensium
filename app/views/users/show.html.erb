<%= render 'shared/navbar-logo' %>
<%= render 'shared/flashes' %>
<div class="container">

  <div class="row">
    <div class="col-12 offset-md-1 col-md-10">
      <div class="opacity-container mt-5">
        <h3 class ="text-center text-white">Information générales</h3>
        <div class="mt-5 d-flex justify-content-start">
          <%= cl_image_tag current_user.avatar, format: :jpg, class: "img-medium" %>
          <div class="user-content ml-5"></div>
          <div class= "form-check-label">
            <p>Username : <%= @user.username %></p>
            <p>email : <%= @user.email %></p>
            <%= link_to "Edit", edit_user_registration_path(@user), class: "button-style-log form-control text-center" %>
          </div>
        </div>
      </div>
      <div class="margin-x-15">
        <div class="row mt-3">
          <div class="col-6 border-right border-white border-top pl-0">
            <div class="opacity-container mt-3 ">
              <h5 class = "text-center">My Meetings</h5>
            </div>
          </div>
          <div class="col-6 border-top border-white position-relative pr-0">
            <div class="opacity-container mt-3">
              <h5 class = "text-center">My Calendar</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

