<%= render 'shared/navbar-logo' %>
<%= render 'shared/flashes' %>
<div class="container">
  <div class="row">
    <div data-aos="zoom-in" class="col-xs-12 offset-md-4 col-md-4 transparent-container container-margin-signup ">
      <h2 class="text-center">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.label :username, class: "label-style-devise" %>
          <%= f.input_field :username, class: "form-control devise-style",
                      require: true,
                      autofocus: true,
                      input_html: { autocomplete: "username"}%>
          <%= f.label :email, class: "label-style-devise" %>
          <%= f.input_field :email, class: "form-control devise-style",
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "email" }%>
          <%= f.label :password, class: "label-style-devise" %>
          <%= f.input_field :password, class: "form-control devise-style",
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.label :password_confirmation, class: "label-style-devise" %>
          <%= f.input_field :password_confirmation, class: "form-control devise-style",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :avatar %>
          <%= f.input :avatar_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "form-control button-style-log" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
