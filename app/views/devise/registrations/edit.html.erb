<%= render 'shared/navbar-logo' %>
<%= render 'shared/flashes' %>

<div class="edit-list">
  <ul>
    <li>
      <div class="edit-hover">
        <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "ÃŠtes-vous sur de vouloir supprimer votre compte ?" }, method: :delete, class: "devise-edit-link hover-field" %></div>
      </li>
    <li>
      <div class="edit-hover">
        <%= link_to "Retour", :back, class: "devise-edit-link" %>
        </div>
      </li>
  </ul>
</div>

<div class="container">
  <div class="row">
    <div data-aos="zoom-in" class="col-xs-12 offset-md-3 col-md-6 transparent-container container-margin-edit ">
      <h2 class="text-center">Modifier mes informations</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.label :email, class: "label-style-devise" %>
          <%= f.input_field :email, required: true, autofocus: true, class: "form-control devise-style" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.label :pseudo, class: "label-style-devise" %>
          <%= f.input_field :username, class: "form-control devise-style",
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-username" } %>
          <%= f.label :mot_de_passe, class: "label-style-devise" %>
          <%= f.input_field :password, class: "form-control devise-style",
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.label :confirmer_mot_de_passe, class: "label-style-devise" %>
          <%= f.input_field :password_confirmation, class: "form-control devise-style",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.label :mot_de_passe_actuel, class: "label-style-devise" %>
          <%= f.input_field :current_password, class: "form-control devise-style",
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :avatar %>
          <%= f.input :avatar_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Confirmer changements", class: "form-control button-style-log" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
