<%= render 'shared/navbar-logo' %>
<%= render 'shared/flashes' %>
<div class="container">
  <div class="row">
    <div data-aos="zoom-in" class="col-xs-12 offset-md-4 col-md-4 transparent-container container-margin ">
      <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.label :email, class: "label-style-devise" %>
          <%= f.input_field :email, class: "form-control devise-style",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.label :password, class: "label-style-devise" %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password-link" %><br />
          <% end -%>
          <%= f.input_field :password, class: "form-control devise-style",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <%= render "devise/shared/links" %>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "form-control button-style-log" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
