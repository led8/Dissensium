  <!-- </h1> -->
</div>


 <div class="d-flex justify-content-around">
   <%= link_to "Créer un meeting", new_issue_path, class: "dissensium-home-link" %>
   <%= link_to "Rejoindre un meeting", join_path, class: "dissensium-home-link" %>
 </div>
</div>

<div class="meeting-list">
  <ul id="meetings">
   <li><div class="meeting-hover"><%= link_to "Créer un meeting", new_issue_path, class: "dissensium-meeting-link" %></div></li>
   <li><div class="meeting-hover"><%= link_to "Rejoindre un meeting", join_path, class: "dissensium-meeting-link" %></div></li>
  </ul>
</div>



<script>
  const list = document.querySelectorAll("#list .list-hover");
  const title = document.querySelector(".title-dissensium");
  const links = document.querySelectorAll(".d-flex .dissensium-home-link");
  const meetingLinks = document.querySelectorAll("#meetings .meeting-hover");
  const about = document.querySelector(".about-content");
  const concept = document.querySelector(".concept-content");
  const contact = document.querySelector(".contact-content");
  const bConcept = document.querySelector(".b-concept");
  const back = document.querySelectorAll(".back-button");


  list.forEach((li) => {
    li.addEventListener("click", (event) => {
      if (event.currentTarget === list[0]) {
        title.style.opacity = 0;
        title.style.visibility = "hidden";
        title.style.transition = "all 1s";
        links.forEach((link) => {
          link.style.opacity = 0;
          link.style.visibility = "hidden";
          link.style.transition = "all 1s";
        });
        about.style.left = "138px";
        concept.style.left = "-1000px";
        contact.style.left = "-1000px";

        meetingLinks.forEach((mL) => {
          mL.style.opacity = 1;
          mL.style.visibility = "visible";
          mL.style.transition = "all 5s";
        });
      }
      else if (event.currentTarget === list[1]) {
        title.style.opacity = 0;
        title.style.visibility = "hidden";
        title.style.transition = "all 1s";
        links.forEach((link) => {
          link.style.opacity = 0;
          link.style.visibility = "hidden";
          link.style.transition = "all 1s";
        });
        concept.style.left = "138px";
        about.style.left = "-1000px";
        contact.style.left = "-1000px";

        meetingLinks.forEach((mL) => {
          mL.style.opacity = 1;
          mL.style.visibility = "visible";
          mL.style.transition = "all 5s";
        });
      }
      else {
        title.style.opacity = 0;
        title.style.visibility = "hidden";
        title.style.transition = "all 1s";
        links.forEach((link) => {
          link.style.opacity = 0;
          link.style.visibility = "hidden";
          link.style.transition = "all 1s";
        });
        contact.style.left = "138px";
        about.style.left = "-1000px";
        concept.style.left = "-1000px";

        meetingLinks.forEach((mL) => {
          mL.style.opacity = 1;
          mL.style.visibility = "visible";
          mL.style.transition = "all 5s";
        });
      }
    });
  });

  bConcept.addEventListener("click", (event) => {
    about.style.left = "-1000px";
    concept.style.left = "138px";
  });

  back.forEach((ba) => {
    ba.addEventListener("click", (event) => {
      about.style.left = "-1000px";
      concept.style.left = "-1000px";
      contact.style.left = "-1000px";
      title.style.opacity = 1;
      title.style.visibility = "visible";
        links.forEach((link) => {
          link.style.opacity = 1;
          link.style.visibility = "visible";
        });
      meetingLinks.forEach((mL) => {
          mL.style.opacity = 0;
          mL.style.visibility = "";
          mL.style.transition = "all 2s";
        });
    });
  });
</script>
